echo ""
echo -e "\033[1;37m๐นโโ SSH ACCOUNT DETAILS โโ๐น\033[0m"
echo ""
echo -e "\033[1;36m๐ IP Address     : \033[1;33m$IP\033[0m"
echo -e "\033[1;36m๐ Hostname       : \033[1;33m$Host\033[0m"
echo -e "\033[1;36m๐ค Username       : \033[1;33m$nome\033[0m"
echo -e "\033[1;36m๐ Password       : \033[1;33m$pass\033[0m"
echo -e "\033[1;36m๐ซ Login Limit    : \033[1;33m$limit\033[0m"
echo -e "\033[1;36mโณ Expiry Time    : \033[1;33m$u_temp minutes\033[0m"
echo ""
echo -e "\033[1;37m๐นโโ MTN GHANA PAYLOAD 1๏ธโฃ โโ๐น\033[0m"
echo ""
echo -e "\033[1;36m๐ GET / HTTP/1.1[crlf]Host: $Host[crlf]Connection: Upgrade[crlf]User-Agent: [ua][crlf]Upgrade: websocket[crlf][crlf]\033[0m"
echo ""
